{% extends 'base.html.twig' %}

{% block title %}Home Page{% endblock %}

{% block body %}
    <style>
        .posts{
            border-radius: 10px;
            box-shadow: 0 10px 16px rgba(0, 0, 0, .25);
            margin-bottom: 40px;
            margin-top: 40px;
            padding: 40px;
        }
        img{
            border-radius: 10px;
        }
    </style>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success mt-5 text-center">
            {{ message }}
        </div>
    {% endfor %}

    {% for post in posts %}
        <section class="posts">
            <article>
                <h2>{{ post.title }}</h2>
                <div class="metadata">
                    {{ post.createdAt | date('Y-m-d') }} at {{ post.createdAt | date('H:i')}} by Minh
                    <button type="button" class="btn btn-success">{{ post.category.title }}</button>
                    5 comments
                </div>
                <div class="content">
                    <img src="https://images.yourstory.com/cs/wordpress/2017/06/106_5-tips-to-hustle-your-way-to-success.jpg?fm=auto&ar=2:1&mode=crop&crop=faces&w=720" alt="" class="mt-3 mb-3">
                    <p>{{ post.content }}</p>
                    <a href="{{ path('post_show', {'id' : post.id}) }}">Read More</a>
                </div>
            </article>
        </section>
    {% endfor %}
    <div class="navigation mt -5">
        {{ knp_pagination_render(posts) }}
    </div>

{% endblock %}
